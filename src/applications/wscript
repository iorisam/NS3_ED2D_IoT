## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    module = bld.create_ns3_module('applications', ['internet', 'config-store','stats'])
    module.source = [
        'model/bulk-send-application.cc',
        'model/onoff-application.cc',
        'model/packet-sink.cc',
        'model/udp-client.cc',
        'model/udp-server.cc',
        'model/request-response-client.cc',
        'model/request-response-server.cc',
        'model/LteAppClient.cc',
        'model/LteAppServer.cc',
        'model/seq-ts-header.cc',
        'model/udp-trace-client.cc',
        'model/packet-loss-counter.cc',
        'model/udp-echo-client.cc',
        'model/udp-echo-server.cc',
        'model/lte-echo-app.cc',
        'model/lte-echo-server.cc',
        'model/application-packet-probe.cc',
        'model/lr-client.cc',
        'model/LRClientPush.cc',
        'model/LRServer.cc',
        'model/LRServerPush.cc',
        'model/Myheader.cc',
        'model/Astar2.cc',
        'model/Disc_Data_update_app.cc',
        'model/need-wifi-app.cc',
        'model/need-prose-app.cc',
        'model/NeedLRClient.cc',
        'model/ChServer.cc',
        'helper/lr-app-helper.cc',
        'helper/LRPushAppHelper.cc',
        'helper/bulk-send-helper.cc',
        'helper/on-off-helper.cc',
        'helper/packet-sink-helper.cc',
        'helper/udp-client-server-helper.cc',
        'helper/udp-echo-helper.cc',
        'helper/LteAppHelper.cc',
        'helper/lte-echo-helper.cc',
        'helper/request-response-helper.cc',
        'helper/Disc_Update_Helper.cc',
        'helper/need-wifi-app-helper.cc',
        'helper/need-prose-app-helper.cc',
        'helper/NeedLRApps.cc',
        'helper/ChServerhelper.cc',
        ]

    applications_test = bld.create_ns3_module_test_library('applications')
    applications_test.source = [
        'test/udp-client-server-test.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'applications'
    headers.source = [
        'model/bulk-send-application.h',
        'model/onoff-application.h',
        'model/packet-sink.h',
        'model/udp-client.h',
        'model/udp-server.h',
        'model/request-response-client.h',
        'model/request-response-server.h',
        'model/LteAppClient.h',
        'model/LteAppServer.h',
        'model/seq-ts-header.h',
        'model/udp-trace-client.h',
        'model/packet-loss-counter.h',
        'model/udp-echo-client.h',
        'model/udp-echo-server.h',
        'model/lte-echo-app.h',
        'model/lte-echo-server.h',
        'model/application-packet-probe.h',
        'model/lr-client.h',
        'model/LRClientPush.h',
        'model/LRServerPush.h',
        'model/LRServer.h',
        'model/Myheader.h',
        'model/Astar2.h',
        'model/Disc_Data_update_app.h',
        'model/need-wifi-app.h',
        'model/need-prose-app.h',
        'model/NeedLRClient.h',
        'model/ChServer.h',
        'helper/lr-app-helper.h',
        'helper/LRPushAppHelper.h',
        'helper/bulk-send-helper.h',
        'helper/on-off-helper.h',
        'helper/packet-sink-helper.h',
        'helper/udp-client-server-helper.h',
        'helper/udp-echo-helper.h',
        'helper/lte-echo-helper.h',
        'helper/LteAppHelper.h',
        'helper/request-response-helper.h',
        'helper/Disc_Update_Helper.h',
        'helper/need-wifi-app-helper.h',
        'helper/need-prose-app-helper.h',
        'helper/NeedLRApps.h',
        'helper/ChServerhelper.h',
        ]

    bld.ns3_python_bindings()
